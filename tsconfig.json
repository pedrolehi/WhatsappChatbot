{
	"compilerOptions": {
		"baseUrl": "./src", // Defina o diretório base como o src
		"paths": {
			"@/*": [
				"*"
			] // Mapeia @ para dentro do diretório src
		},
		"target": "ES2021",
		"module": "CommonJS",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"moduleResolution": "node"
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}